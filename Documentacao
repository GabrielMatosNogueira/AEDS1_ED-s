    IO_print("\n8 - ");
    IO_print("\n9 - ");
    IO_print("\n10 - ");
    IO_print("\n11 - ");
    IO_print("\n12 - ");

    IO_print("\nDigite uma opcao: ");
    opcao=IO_readint;
}

